{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",

    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "axios/lib/*": ["node_modules/axios/lib/*"],
      "axios/unsafe/*": ["node_modules/axios/lib/*"]
    }
  },
  "include": ["src/*.ts", "src/*.js", "src/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
